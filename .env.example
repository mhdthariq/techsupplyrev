# TechSupply Co. Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (Recommended)
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Alternative: Local PostgreSQL Configuration
# Uncomment and use these if you're using local PostgreSQL instead of Supabase
# DATABASE_URL=postgresql://techsupply:your_password@localhost:5432/techsupply_co
# POSTGRES_USER=techsupply
# POSTGRES_PASSWORD=your_secure_password
# POSTGRES_DB=techsupply_co
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Development/Production Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Application Metadata
NEXT_PUBLIC_APP_NAME=TechSupply Co.
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Modern e-commerce platform for tech retailers

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================

# JWT Secret (generate a random string for production)
# You can generate one at: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET=your-super-secret-jwt-key-change-this-in-production

# Auth URLs
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# THIRD-PARTY INTEGRATIONS (Optional)
# =============================================================================

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google OAuth (if enabling Google login)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (if enabling GitHub login)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Service (for notifications)
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-password
# EMAIL_FROM=noreply@techsupply.co

# Payment Processing (Stripe example)
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# File Upload Service (Cloudinary example)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry (Error Monitoring)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Vercel Analytics
# VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# PostHog (Product Analytics)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# =============================================================================
# DEVELOPMENT TOOLS (Development Only)
# =============================================================================

# Debug Mode
# DEBUG=true

# Disable telemetry
# NEXT_TELEMETRY_DISABLED=1

# Enable bundle analyzer
# ANALYZE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated list for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW=60000

# =============================================================================
# NOTES
# =============================================================================

